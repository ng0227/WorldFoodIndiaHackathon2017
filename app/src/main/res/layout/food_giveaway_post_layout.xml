<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#fffde7"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Metro Hotel"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <RelativeLayout
                android:id="@+id/rl_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_schedule"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_schedule_grey_24dp"
                    tools:text="Batch Name" />

                <TextView
                    android:id="@+id/tv_test_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/iv_schedule"
                    android:text="10:30 pm" />

            </RelativeLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="20dp"
                android:text="A block, Vikaspuri" />

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Food for 20 people.Rice and Dal are available" />

            <RelativeLayout
                android:id="@+id/test_code_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/des"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true">

                <View
                    android:id="@+id/v_test_status"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/online_circle_view" />

                <TextView
                    android:id="@+id/tv_test_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/v_test_status"
                    android:text="Available" />
            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_below="@id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#e3f2fd">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="DROOLS"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <RelativeLayout
                android:id="@+id/rl_schedule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_schedule1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_schedule_grey_24dp"
                    tools:text="Batch Name" />

                <TextView
                    android:id="@+id/tv_test_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/iv_schedule1"
                    android:text="10:00 pm" />

            </RelativeLayout>

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name1"
                android:layout_marginLeft="20dp"
                android:text="Sec-10, Dwarka" />

            <TextView
                android:id="@+id/des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Food for 10 people. Curry and rice." />

            <RelativeLayout
                android:id="@+id/test_code_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/des1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true">

                <View
                    android:id="@+id/v_test_status1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/online_circle_view" />

                <TextView
                    android:id="@+id/tv_test_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/v_test_status1"
                    android:text="Available" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_below="@id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#fffde7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="56 Bhog"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <RelativeLayout
                android:id="@+id/rl_schedule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_schedule2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_schedule_grey_24dp"
                    tools:text="Batch Name" />

                <TextView
                    android:id="@+id/tv_test_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/iv_schedule2"
                    android:text="10:00 pm" />

            </RelativeLayout>

            <TextView
                android:id="@+id/address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name2"
                android:layout_marginLeft="20dp"
                android:text="Block B,Uttam Nagar" />

            <TextView
                android:id="@+id/des2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Food for 10 people. Only dal is available." />

            <RelativeLayout
                android:id="@+id/test_code_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/des2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true">

                <View
                    android:id="@+id/v_test_status2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/online_circle_view" />

                <TextView
                    android:id="@+id/tv_test_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/v_test_status2"
                    android:text="Available" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>