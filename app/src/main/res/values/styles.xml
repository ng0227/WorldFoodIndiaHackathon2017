<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewFont14spSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextViewFont14spWhiteText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyledLayoutwrapHeight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewFont14spPrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>



    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000
        </item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#000</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#000</item> <!-- checkbox text color -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>